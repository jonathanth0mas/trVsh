<%= render "shared/menu" %>

<h1>Users</h1>

<% @users.each do |user| %>
 <ul>
   <div class="container">
 	 <li>Name: <%= user.name %></li>
	 <li>Address: <%= link_to user.address , "https://www.google.com/maps/place/#{user.address.tr(" ", "+")}",:target => "_blank" %></li>
	 <li>Bins: <%= user.bins %></li>	
	 <li>Material: <%= user.material %></li>
	 <li>Pickup: <%= user.date %></li>

	 <% if current_user.id == user.id %>
		 <%= link_to "Edit this user!!", edit_user_path(user) %>
		 <%= link_to "Delete this user :(", logout_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
	 <% end %>
   </div>	
   </br> 
 </ul>

<% end %>